<mvc:View
	controllerName="sap.m.sample.TablePerso.Table"
	xmlns:l="sap.ui.layout"
	xmlns:model="sap.ui.model"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Table id="productsTable"
		items="{/ProductCollection}">
		<headerToolbar>
			<Toolbar>
				<Label text="Products"></Label>
				<ToolbarSpacer></ToolbarSpacer>
				<!--  Add the Personalization button -->
				<Button icon="sap-icon://person-placeholder" press="onPersoButtonPressed" />
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column id="productCol" width="12em"><Label text="Product" /></Column>
			<Column id="supplierCol" minScreenWidth="Tablet" demandPopin="true"><Label text="Supplier" /></Column>
			<Column id="dimensionsCol" minScreenWidth="Tablet" demandPopin="true" hAlign="Right"><Label text="Dimensions" /></Column>
			<Column id="weightCol" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><Label text="Weight" /></Column>
			<Column id="priceCol" hAlign="Right"><Label text="Price" /></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier title="{Name}" text="{ProductId}" />
					<Text text="{SupplierName}" />
					<Text text="{Width} x {Depth} x {Height} {DimUnit}" />
					<ObjectNumber number="{WeightMeasure}" unit="{WeightUnit}"
						state="{
							path: 'WeightMeasure',
							formatter: 'sap.m.sample.TablePerso.Formatter.weightState'
						}" />
					<ObjectNumber
						number="{Price}"
						unit="{CurrencyCode}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>
