<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		title="{Name}"
		class="sapUiPopupWithPadding"
		placement="Bottom" >
		<footer>
			<Bar>
				<contentRight>
					<Button
						text="Email"
						icon="sap-icon://email"
						press="handleEmailPress" />
				</contentRight>
			</Bar>
		</footer>
		<Image src="{ProductPicUrl}" width="15em" densityAware="false" />
	</Popover>
</core:FragmentDefinition>