<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		title="{Name}"
		class="sapUiPopupWithPadding" >
		<content>
			<Image src="{ProductPicUrl}" width="15em" densityAware="false" />
		</content>
		<beginButton>
			<Button text="Ok" press="onDialogCloseButton" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onDialogCloseButton" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>