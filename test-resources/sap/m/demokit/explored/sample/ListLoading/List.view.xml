<mvc:View
	controllerName="sap.m.sample.ListLoading.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		id="idProducts"
		noDataText="No products available"
		items="{productmodel>/ProductCollection}">
		<headerToolbar>
			<Toolbar>
				<Label text="Products" />
				<ToolbarSpacer />
				<Button
					icon="sap-icon://refresh"
					press="refreshDataFromBackend" />
			</Toolbar>
		</headerToolbar>
		<StandardListItem
			title="{productmodel>Name}"
			description="{productmodel>ProductId}"
			icon="{productmodel>ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false" />
	</List>
</mvc:View>