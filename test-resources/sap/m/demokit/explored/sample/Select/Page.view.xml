<mvc:View
	height="100%"
	controllerName="sap.m.sample.Select.Page"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		showHeader="false"
		class="marginBoxContent">
		<subHeader>
			<Bar>
				<contentRight>
					<Select
						autoAdjustWidth="true"
						items="{
							path: '/ProductCollection',
							sorter: { path: 'Name' }
						}">
						<core:Item key="{ProductId}" text="{Name}" />
					</Select>
				</contentRight>
			</Bar>
		</subHeader>
		<content>
			<VBox>
				<Select
					items="{
						path: '/ProductCollection',
						sorter: { path: 'Name' }
					}">
					<core:Item key="{ProductId}" text="{Name}" />
				</Select>
			</VBox>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Select
						type="IconOnly"
						icon="sap-icon://filter"
						autoAdjustWidth="true"
						items="{
							path: '/ProductCollection',
							sorter: { path: 'Name' }
						}">
						<core:Item key="{ProductId}" text="{Name}" />
					</Select>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>