<mvc:View
	height="100%"
	controllerName="sap.m.sample.Button.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Page
		title="Page"
		class="marginBoxContent" >
		<customHeader>
			<Bar>
				<contentLeft>
					<Button type="Back" press="onPress" />
				</contentLeft>
				<contentMiddle>
					<Label text="Title" />
				</contentMiddle>
				<contentRight>
					<Button icon="sap-icon://edit" press="onPress" />
				</contentRight>
			</Bar>
		</customHeader>
		<subHeader>
			<Bar>
				<contentMiddle>
					<Button text="Default" press="onPress" />
					<Button type="Reject" text="Reject" press="onPress" />
					<Button icon="sap-icon://action" press="onPress" />
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<HBox>
				<Button text="Default" press="onPress" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
				<Button type="Accept" text="Accept" press="onPress" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
				<Button type="Reject" text="Reject" press="onPress" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Button>
			</HBox>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button type="Emphasized" text="Emphasized" press="onPress" />
					<Button text="Default" press="onPress" />
					<Button icon="sap-icon://action" press="onPress" />
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>